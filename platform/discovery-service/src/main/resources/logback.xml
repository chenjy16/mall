<configuration>

    <!-- <property resource="resource1.properties" /> -->
	<property name="LOG_HOME" value="/var/log/platform" />
	<property name="FILE_NAME" value="discovery-service-log" />
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	    <layout class="ch.qos.logback.classic.PatternLayout">
	      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%line - %msg%n</Pattern>
	    </layout>
  	</appender>

	<appender name="FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${LOG_HOME}/${FILE_NAME}.log</file>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_HOME}/${FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history capped at 1GB total size -->
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
    	</rollingPolicy>
		<encoder>
      		<pattern>%d{HH:mm:ss.SSS} %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    	</encoder>
  </appender>
  
  <appender name="SQL_FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${LOG_HOME}/sql_${FILE_NAME}.log</file>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_HOME}/sql_${FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history capped at 1GB total size -->
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
    	</rollingPolicy>
		<encoder>
      		<pattern>%d{HH:mm:ss.SSS} %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    	</encoder>
  </appender>
  
  <!-- <logger name="org.apache.ibatis" level="ERROR">
      <appender-ref ref="SQL_FILE_APPENDER" />
  </logger>
  
   <logger name="org.hibernate" level="ERROR">
      <appender-ref ref="SQL_FILE_APPENDER" />
  </logger> -->
  
   <logger name="org.springframework.data" level="INFO">
      <appender-ref ref="SQL_FILE_APPENDER" />
  </logger>
  
  <logger name="com.wisers.labeltool.dao" level="INFO">
      <appender-ref ref="SQL_FILE_APPENDER" />
  </logger>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE_APPENDER" />
  </root>

</configuration>
